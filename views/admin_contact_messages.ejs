<%- include('_header', { pageTitle: pageTitle, activePage: 'contact-messages' }) %>

<style>
  /* Admin Contact Messages List Styling (similar to other admin tables) */
  .admin-contact-messages-dashboard {
    max-width: 1200px;
    margin: 40px auto;
    padding: 20px;
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
    border-radius: 8px;
  }

  .admin-contact-messages-dashboard h1 {
    text-align: center;
    margin-bottom: 30px;
    color: #333;
  }

  .messages-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
  }

  .messages-table th, .messages-table td {
    border: 1px solid #ddd;
    padding: 12px;
    text-align: left;
    vertical-align: middle;
  }

  .messages-table th {
    background-color: #f2f2f2;
    font-weight: bold;
  }

  .messages-table tbody tr:nth-child(even) {
    background-color: #f9f9f9;
  }

  .messages-table tbody tr:hover {
    background-color: #f1f1f1;
  }

  .messages-table .action-links a,
  .messages-table .action-links button {
    display: inline-block;
    padding: 6px 12px;
    margin-right: 8px;
    border-radius: 5px;
    text-decoration: none;
    font-weight: bold;
    transition: background-color 0.2s ease;
    cursor: pointer;
    border: none;
  }

  .messages-table .action-links .view-link {
    background-color: #007bff;
    color: white;
  }

  .messages-table .action-links .view-link:hover {
    background-color: #0056b3;
  }

  .messages-table .action-links .delete-btn {
    background-color: #dc3545;
    color: white;
  }

  .messages-table .action-links .delete-btn:hover {
    background-color: #bd2130;
  }

  .message-status .read-status {
      color: green;
      font-weight: bold;
  }
  .message-status .unread-status {
      color: orange;
      font-weight: bold;
  }
  .message-status .replied-status {
      color: blue;
      font-weight: bold;
  }
  .message-status .unreplied-status {
      color: gray;
  }

  .message {
      background-color: #d4edda;
      color: #155724;
      border: 1px solid #c3e6cb;
      padding: 10px 20px;
      margin-bottom: 20px;
      border-radius: 5px;
      text-align: center;
  }

  .error {
      background-color: #f8d7da;
      color: #721c24;
      border: 1px solid #f5c6cb;
      padding: 10px 20px;
      margin-bottom: 20px;
      border-radius: 5px;
      text-align: center;
  }

  /* Responsive Table */
  @media (max-width: 768px) {
    .admin-contact-messages-dashboard {
      margin: 20px auto;
      padding: 10px;
    }
    .messages-table, .messages-table thead, .messages-table tbody, .messages-table th, .messages-table td, .messages-table tr {
      display: block;
    }
    .messages-table thead tr {
      position: absolute;
      top: -9999px;
      left: -9999px;
    }
    .messages-table tr {
      margin: 0 0 1rem 0;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 10px;
    }
    .messages-table td {
      border: none;
      border-bottom: 1px solid #eee;
      position: relative;
      padding-left: 50%;
      text-align: right;
    }
    .messages-table td:before {
      position: absolute;
      top: 12px;
      left: 6px;
      width: 45%;
      padding-right: 10px;
      white-space: nowrap;
      content: attr(data-label);
      font-weight: bold;
      text-align: left;
    }
    .messages-table td:last-child {
      border-bottom: 0;
    }
    .messages-table .action-links {
        text-align: right;
    }
  }
</style>

<div class="admin-contact-messages-dashboard">
  <h1>Contact Messages</h1>

  <% if (message) { %>
    <p class="message"><%= message %></p>
  <% } %>
  <% if (error) { %>
    <p class="error"><%= error %></p>
  <% } %>

  <table class="messages-table">
    <thead>
      <tr>
        <th>Sender Email</th>
        <th>Subject</th>
        <th>Status</th>
        <th>Received On</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (messages && messages.length > 0) { %>
        <% messages.forEach(msg => { %>
          <tr>
            <td data-label="Sender Email"><%= msg.senderEmail %></td>
            <td data-label="Subject"><%= msg.subject.substring(0, 50) %><% if (msg.subject.length > 50) { %>...<% } %></td>
            <td data-label="Status" class="message-status">
              <span class="<%= msg.read ? 'read-status' : 'unread-status' %>"><%= msg.read ? 'Read' : 'Unread' %></span> / 
              <span class="<%= msg.replied ? 'replied-status' : 'unreplied-status' %>"><%= msg.replied ? 'Replied' : 'Unreplied' %></span>
            </td>
            <td data-label="Received On"><%= msg.createdAt.toLocaleDateString() %> <%= msg.createdAt.toLocaleTimeString() %></td>
            <td data-label="Actions" class="action-links">
              <a href="/admin/contact-messages/<%= msg._id %>" class="view-link">View</a>
              <form action="/admin/contact-messages/delete/<%= msg._id %>" method="POST" style="display:inline-block;" onsubmit="return confirm('Are you sure you want to delete this message?');">
                <button type="submit" class="delete-btn">Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="5" style="text-align: center;">No contact messages found.</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include('_footer') %>
