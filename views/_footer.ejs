         <input type="email" id="newsletter-email" placeholder="Enter your email" required>
         <button type="submit">Subscribe</button>
       </form>
       
       <div id="newsletter-message" style="margin-top: 10px; font-size: 0.9em; font-weight: bold;"></div>
       <div class="social-icons">
         <% settings.footerSocialIcons.forEach(icon => { %>
         <a href="<%= icon.url %>"><img src="<%= icon.img %>" alt="<%= icon.name %>" /></a>
         <% }); %>
       </div>
     </div>
   </div>

   <!-- NEW: Disclaimer Section in Footer -->
   <div class="footer-disclaimer-section">
     <h2><%= settings.disclaimerHeading %></h2>
     <%- settings.disclaimerContent %>
   </div>

   <div class="footer-bottom">
     <%= settings.footerCopyrightText %>
   </div>
 </footer>

