 <footer class="footer">
   <div class="footer-container">

     <!-- Company Info -->
     <div class="footer-section">
       <h3><%= settings.footerCompanyName %></h3>
       <p><%= settings.footerCompanyTagline %></p>
     </div>

     <!-- Quick Links -->
     <div class="footer-section">
       <h4>Quick Links</h4>
       <ul>
         <!-- Hardcoded links (can be removed if all links are dynamic) -->
         <li><a href="/">Home</a></li>
         <li><a href="/products">All Products</a></li>

         <!-- Dynamic Pages in Footer Quick Links -->
         <% if (footerPages && footerPages.length > 0) { %>
         <% footerPages.forEach(page => { %>
         <% if(page.slug) { %><li><a href="/<%= page.slug %>"><%= page.title %></a></li> <% } %>
         <% }); %>
         <% } %>


       </ul>
     </div>

     <!-- Contact Info -->
     <div class="footer-section">
       <h4>Contact Us</h4>
       <p>Email: <%= settings.footerContactEmail %></p>
       <p>Phone: <%= settings.footerContactPhone %></p>
       <p>Address: <%= settings.footerContactAddress %></p>
       <p> <b>Payment Methods Accepted:</b> <%= settings.footerPaymentMethods %></p>
     </div>

