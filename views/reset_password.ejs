<%- include('_header', { pageTitle: 'Set New Password', activePage: 'login' }) %>

<style>
  /* Reuse auth styles */
  .auth-section {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: calc(100vh - 150px);
    padding: 40px 20px;
    background-color: #f5f0f1;
  }

  .auth-box {
    background-color: white;
    padding: 30px;
    max-width: 400px;
    width: 100%;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    border-radius: 8px;
    text-align: center;
  }

  .auth-box h2 {
    margin-bottom: 25px;
    font-size: 24px;
    color: #333;
  }

  .auth-box form label {
    display: block;
    margin-top: 15px;
    margin-bottom: 8px;
    color: #555;
    font-weight: bold;
    text-align: left;
  }

  .auth-box form input {
    width: calc(100% - 22px);
    padding: 12px;
    border: 1px solid #ccc;
    border-radius: 5px;
    margin-bottom: 20px;
    font-size: 1rem;
  }

  .auth-box button[type="submit"] {
    width: 100%;
    padding: 12px 20px;
    background-color: #28a745;
    color: white;
    border: none;
    border-radius: 5px;
    font-weight: bold;
    font-size: 1.1rem;
    cursor: pointer;
    transition: background-color 0.2s ease;
    margin-top: 20px;
  }

  .auth-box button[type="submit"]:hover {
    background-color: #218838;
  }

  .message {
    color: #28a745;
    background-color: #d4edda;
    border: 1px solid #c3e6cb;
    padding: 10px;
    border-radius: 5px;
    margin-bottom: 15px;
    font-size: 0.9rem;
  }
  .error-message {
    color: #dc3545;
    background-color: #f8d7da;
    border: 1px solid #f5c6cb;
    padding: 10px;
    border-radius: 5px;
    margin-bottom: 15px;
    font-size: 0.9rem;
  }
</style>

<div class="auth-section">
  <div class="auth-box">
    <h2>Set New Password</h2>
    <% if (message) { %>
      <p class="message"><%= message %></p>
    <% } %>
    <% if (error) { %>
      <p class="error-message"><%= error %></p>
    <% } %>
    
    <% if (user) { %>
    <p style="font-size: 0.9em; margin-bottom: 25px;">
        User: <strong><%= user.email %></strong>. Please enter your new password below.
    </p>

    <form action="/reset-password" method="POST" onsubmit="return validatePassword(event)">
      <!-- Hidden field to send the token back to the server -->
      <input type="hidden" name="token" value="<%= token %>">
      
      <label for="password">New Password:</label>
      <input type="password" id="password" name="password" required>

      <label for="confirmPassword">Confirm New Password:</label>
      <input type="password" id="confirmPassword" name="confirmPassword" required>

      <div id="password-error" class="error-message" style="display: none; margin-top: 10px;"></div>

      <button type="submit">Reset Password</button>
    </form>
    
    <% } else { %>
        <p class="error-message">
            Invalid or expired password reset link. Please try the <a href="/forgot-password">forgot password process</a> again.
        </p>
    <% } %>
  </div>
</div>

<script>
    function validatePassword(event) {
        const password = document.getElementById('password').value;
        const confirmPassword = document.getElementById('confirmPassword').value;
        const errorDiv = document.getElementById('password-error');

        if (password.length < 5) {
            errorDiv.textContent = 'Password must be at least 5 characters long.';
            errorDiv.style.display = 'block';
            event.preventDefault();
            return false;
        }

        if (password !== confirmPassword) {
            errorDiv.textContent = 'Passwords do not match.';
            errorDiv.style.display = 'block';
            event.preventDefault();
            return false;
        }

        errorDiv.style.display = 'none';
        return true;
    }
</script>

<%- include('_footer') %>