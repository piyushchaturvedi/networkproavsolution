<%- include('_header', { pageTitle: 'Forgot Password', activePage: 'login' }) %>

<style>
  /* Reuse auth styles */
  .auth-section {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: calc(100vh - 150px);
    padding: 40px 20px;
    background-color: #f5f0f1;
  }

  .auth-box {
    background-color: white;
    padding: 30px;
    max-width: 400px;
    width: 100%;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    border-radius: 8px;
    text-align: center;
  }

  .auth-box h2 {
    margin-bottom: 25px;
    font-size: 24px;
    color: #333;
  }

  .auth-box form label {
    display: block;
    margin-top: 15px;
    margin-bottom: 8px;
    color: #555;
    font-weight: bold;
    text-align: left;
  }

  .auth-box form input {
    width: calc(100% - 22px);
    padding: 12px;
    border: 1px solid #ccc;
    border-radius: 5px;
    margin-bottom: 20px;
    font-size: 1rem;
  }

  .auth-box button[type="submit"] {
    width: 100%;
    padding: 12px 20px;
    background-color: #ef4444;
    color: white;
    border: none;
    border-radius: 5px;
    font-weight: bold;
    font-size: 1.1rem;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .auth-box button[type="submit"]:hover {
    background-color: #d13434;
  }

  .message {
    color: #28a745;
    background-color: #d4edda;
    border: 1px solid #c3e6cb;
    padding: 10px;
    border-radius: 5px;
    margin-bottom: 15px;
    font-size: 0.9rem;
  }
  .error-message {
    color: #dc3545;
    background-color: #f8d7da;
    border: 1px solid #f5c6cb;
    padding: 10px;
    border-radius: 5px;
    margin-bottom: 15px;
    font-size: 0.9rem;
  }
</style>

<div class="auth-section">
  <div class="auth-box">
    <h2>Reset Password</h2>
    <% if (message) { %>
      <p class="message"><%= message %></p>
    <% } %>
    <% if (error) { %>
      <p class="error-message"><%= error %></p>
    <% } %>
    
    <p style="font-size: 0.9em; margin-bottom: 25px;">
        Enter your email address below and we will send you a link to reset your password.
    </p>

    <form action="/forgot-password" method="POST">
      <label for="email">Email Address:</label>
      <input type="email" id="email" name="email" required>

      <button type="submit">Send Reset Link</button>
    </form>
    
    <p style="margin-top: 20px; font-size: 0.9em;">
        Remembered your password? <a href="/login">Login here</a>
    </p>
  </div>
</div>

<%- include('_footer') %>