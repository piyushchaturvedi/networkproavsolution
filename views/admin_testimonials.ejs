<%- include('_header', { pageTitle: pageTitle, activePage: 'testimonials' }) %>

<style>
  /* Admin Testimonials List Styling */
  .admin-testimonials-dashboard {
    max-width: 1200px;
    margin: 40px auto;
    padding: 20px;
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
    border-radius: 8px;
  }

  .admin-testimonials-dashboard h1 {
    text-align: center;
    margin-bottom: 30px;
    color: #333;
  }

  .add-new-btn-container {
    text-align: right;
    margin-bottom: 20px;
  }
  .add-new-btn {
    background-color: #28a745;
    color: white;
    padding: 10px 15px;
    border: none;
    border-radius: 5px;
    text-decoration: none;
    font-weight: bold;
    transition: background-color 0.2s ease;
  }
  .add-new-btn:hover {
    background-color: #218838;
  }

  .testimonials-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
  }

  .testimonials-table th, .testimonials-table td {
    border: 1px solid #ddd;
    padding: 12px;
    text-align: left;
    vertical-align: middle;
  }

  .testimonials-table th {
    background-color: #f2f2f2;
    font-weight: bold;
  }

  .testimonials-table tbody tr:nth-child(even) {
    background-color: #f9f9f9;
  }

  .testimonials-table tbody tr:hover {
    background-color: #f1f1f1;
  }

  .testimonials-table .user-img {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
  }

  .testimonials-table .action-links a,
  .testimonials-table .action-links button {
    display: inline-block;
    padding: 6px 12px;
    margin-right: 8px;
    border-radius: 5px;
    text-decoration: none;
    font-weight: bold;
    transition: background-color 0.2s ease;
    cursor: pointer;
    border: none;
  }

  .testimonials-table .action-links .edit-link {
    background-color: #007bff;
    color: white;
  }

  .testimonials-table .action-links .edit-link:hover {
    background-color: #0056b3;
  }

  .testimonials-table .action-links .delete-btn { /* Changed from .delete-link to .delete-btn */
    background-color: #dc3545;
    color: white;
  }

  .testimonials-table .action-links .delete-btn:hover {
    background-color: #bd2130;
  }

  .message {
      background-color: #d4edda;
      color: #155724;
      border: 1px solid #c3e6cb;
      padding: 10px 20px;
      margin-bottom: 20px;
      border-radius: 5px;
      text-align: center;
  }

  .error {
      background-color: #f8d7da;
      color: #721c24;
      border: 1px solid #f5c6cb;
      padding: 10px 20px;
      margin-bottom: 20px;
      border-radius: 5px;
      text-align: center;
  }

  /* Responsive Table */
  @media (max-width: 768px) {
    .admin-testimonials-dashboard {
      margin: 20px auto;
      padding: 10px;
    }
    .testimonials-table, .testimonials-table thead, .testimonials-table tbody, .testimonials-table th, .testimonials-table td, .testimonials-table tr {
      display: block;
    }
    .testimonials-table thead tr {
      position: absolute;
      top: -9999px;
      left: -9999px;
    }
    .testimonials-table tr {
      margin: 0 0 1rem 0;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 10px;
    }
    .testimonials-table td {
      border: none;
      border-bottom: 1px solid #eee;
      position: relative;
      padding-left: 50%;
      text-align: right;
    }
    .testimonials-table td:before {
      position: absolute;
      top: 12px;
      left: 6px;
      width: 45%;
      padding-right: 10px;
      white-space: nowrap;
      content: attr(data-label);
      font-weight: bold;
      text-align: left;
    }
    .testimonials-table td:last-child {
      border-bottom: 0;
    }
    .testimonials-table .action-links {
        text-align: right;
    }
  }
</style>

<div class="admin-testimonials-dashboard">
  <h1>Manage Testimonials</h1>

  <div class="add-new-btn-container">
    <a href="/admin/testimonial/add" class="add-new-btn">Add New Testimonial</a>
  </div>

  <% if (message) { %>
    <p class="message"><%= message %></p>
  <% } %>
  <% if (error) { %>
    <p class="error"><%= error %></p>
  <% } %>

  <table class="testimonials-table">
    <thead>
      <tr>
        <th>Image</th>
        <th>User Name</th>
        <th>Quote</th>
        <th>Rating</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (testimonials && testimonials.length > 0) { %>
        <% testimonials.forEach(testimonial => { %>
          <tr>
            <td data-label="Image"><img src="<%= testimonial.userImage %>" alt="<%= testimonial.userName %>" class="user-img"></td>
            <td data-label="User Name"><%= testimonial.userName %></td>
            <td data-label="Quote"><%= testimonial.quote.substring(0, 100) %><% if (testimonial.quote.length > 100) { %>...<% } %></td>
            <td data-label="Rating"><%= testimonial.rating %>/5</td>
            <td data-label="Actions" class="action-links">
              <a href="/admin/testimonial/edit/<%= testimonial._id %>" class="edit-link">Edit</a>
              <form action="/admin/testimonial/delete/<%= testimonial._id %>" method="POST" style="display:inline-block;" onsubmit="return confirm('Are you sure you want to delete this testimonial?');">
                <button type="submit" class="delete-btn">Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="5" style="text-align: center;">No testimonials found.</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include('_footer') %>
