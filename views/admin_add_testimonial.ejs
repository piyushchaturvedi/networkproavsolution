<%- include('_header', { pageTitle: pageTitle, activePage: 'testimonials' }) %>

<style>
  /* Styling similar to product edit form */
  .add-testimonial-form {
    max-width: 800px;
    margin: 40px auto;
    padding: 30px;
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
    border-radius: 8px;
  }

  .add-testimonial-form h1 {
    text-align: center;
    margin-bottom: 30px;
    color: #333;
  }

  .add-testimonial-form label {
    display: block;
    margin-bottom: 8px;
    font-weight: bold;
    color: #555;
  }

  .add-testimonial-form input[type="text"],
  .add-testimonial-form input[type="number"],
  .add-testimonial-form textarea,
  .add-testimonial-form input[type="file"] {
    width: calc(100% - 22px);
    padding: 10px;
    margin-bottom: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 1rem;
  }

  .add-testimonial-form textarea {
    resize: vertical;
    min-height: 120px;
  }

  .add-testimonial-form button[type="submit"] {
    display: block;
    width: 100%;
    padding: 12px 20px;
    background-color: #28a745;
    color: white;
    border: none;
    border-radius: 5px;
    font-size: 1.1rem;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .add-testimonial-form button[type="submit"]:hover {
    background-color: #218838;
  }

  .form-group {
    margin-bottom: 15px;
  }

  .message {
      background-color: #d4edda;
      color: #155724;
      border: 1px solid #c3e6cb;
      padding: 10px 20px;
      margin-bottom: 20px;
      border-radius: 5px;
      text-align: center;
  }

  .error {
      background-color: #f8d7da;
      color: #721c24;
      border: 1px solid #f5c6cb;
      padding: 10px 20px;
      margin-bottom: 20px;
      border-radius: 5px;
      text-align: center;
  }
  
  /* Image upload/URL option specific styles */
  .image-options {
    margin-bottom: 15px;
    border: 1px solid #eee;
    padding: 15px;
    border-radius: 5px;
    background-color: #fcfcfc;
  }
  .image-options > div {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
  }
  .image-options > div:last-child {
    margin-bottom: 0;
  }
  .image-options label {
    margin-bottom: 0;
    font-weight: normal;
    margin-right: 10px;
  }
  .image-options input[type="radio"] {
    width: auto;
    margin-right: 5px;
    margin-bottom: 0;
    flex-shrink: 0;
  }
  .image-options input[type="text"],
  .image-options input[type="file"] {
    flex-grow: 1;
    margin-bottom: 0;
  }
  .image-input-group {
    margin-top: 10px;
    padding-left: 25px;
    width: 100%;
  }
</style>

<div class="add-testimonial-form">
  <h1>Add New Testimonial</h1>

  <% if (message) { %>
    <p class="message"><%= message %></p>
  <% } %>
  <% if (error) { %>
    <p class="error"><%= error %></p>
  <% } %>

  <form action="/admin/testimonial/add" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label for="userName">User Name:</label>
      <input type="text" id="userName" name="userName" required>
    </div>

    <div class="form-group">
      <label for="quote">Quote:</label>
      <textarea id="quote" name="quote" required></textarea>
    </div>

    <div class="form-group">
      <label for="rating">Rating (0-5):</label>
      <input type="number" id="rating" name="rating" min="0" max="5" step="0.5" required>
    </div>

    <div class="form-group">
        <label>User Image:</label>
        <div class="image-options">
            <div>
                <input type="radio" id="imageOptionUrl" name="userImage_option" value="url" checked>
                <label for="imageOptionUrl">Use Image URL:</label>
            </div>
            <div class="image-input-group" id="imageUrlGroup">
                <input type="text" id="userImage_url_option" name="userImage_url_option" placeholder="Enter full image URL">
            </div>
        </div>
        <div class="image-options">
            <div>
                <input type="radio" id="imageOptionUpload" name="userImage_option" value="upload">
                <label for="imageOptionUpload">Upload Image File:</label>
            </div>
            <div class="image-input-group" id="imageUploadGroup">
                <input type="file" id="userImage" name="userImage" accept="image/*">
            </div>
        </div>
        <small>Choose to provide an image URL or upload a file. Uploaded files will take precedence.</small>
    </div>

    <button type="submit">Add Testimonial</button>
  </form>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Image upload/URL selection logic
    const imageUrlRadio = document.getElementById('imageOptionUrl');
    const imageUploadRadio = document.getElementById('imageOptionUpload');
    const imageUrlGroup = document.getElementById('imageUrlGroup');
    const imageUploadGroup = document.getElementById('imageUploadGroup');
    const imageUrlInput = document.getElementById('userImage_url_option');
    const imageUploadInput = document.getElementById('userImage');

    function toggleImageInputs() {
        if (imageUrlRadio.checked) {
            imageUrlGroup.style.display = 'block';
            imageUploadGroup.style.display = 'none';
            imageUrlInput.setAttribute('required', 'required');
            imageUploadInput.removeAttribute('required');
            imageUploadInput.value = ''; // Clear file input
        } else {
            imageUrlGroup.style.display = 'none';
            imageUploadGroup.style.display = 'block';
            imageUrlInput.removeAttribute('required');
            imageUrlInput.value = ''; // Clear URL input
            imageUploadInput.setAttribute('required', 'required');
        }
    }

    // Initial state
    toggleImageInputs();

    // Add event listeners to radio buttons
    imageUrlRadio.addEventListener('change', toggleImageInputs);
    imageUploadRadio.addEventListener('change', toggleImageInputs);
  });
</script>

<%- include('_footer') %>
