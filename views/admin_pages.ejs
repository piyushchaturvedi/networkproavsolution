<%- include('_header', { pageTitle: pageTitle, activePage: 'pages' }) %>

<style>
  /* Admin Pages List Styling (similar to testimonials/products tables) */
  .admin-pages-dashboard {
    max-width: 1200px;
    margin: 40px auto;
    padding: 20px;
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
    border-radius: 8px;
  }

  .admin-pages-dashboard h1 {
    text-align: center;
    margin-bottom: 30px;
    color: #333;
  }

  .add-new-btn-container {
    text-align: right;
    margin-bottom: 20px;
  }
  .add-new-btn {
    background-color: #28a745;
    color: white;
    padding: 10px 15px;
    border: none;
    border-radius: 5px;
    text-decoration: none;
    font-weight: bold;
    transition: background-color 0.2s ease;
  }
  .add-new-btn:hover {
    background-color: #218838;
  }

  .pages-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
  }

  .pages-table th, .pages-table td {
    border: 1px solid #ddd;
    padding: 12px;
    text-align: left;
    vertical-align: middle;
  }

  .pages-table th {
    background-color: #f2f2f2;
    font-weight: bold;
  }

  .pages-table tbody tr:nth-child(even) {
    background-color: #f9f9f9;
  }

  .pages-table tbody tr:hover {
    background-color: #f1f1f1;
  }

  .pages-table .action-links a,
  .pages-table .action-links button {
    display: inline-block;
    padding: 6px 12px;
    margin-right: 8px;
    border-radius: 5px;
    text-decoration: none;
    font-weight: bold;
    transition: background-color 0.2s ease;
    cursor: pointer;
    border: none;
  }

  .pages-table .action-links .edit-link {
    background-color: #007bff;
    color: white;
  }

  .pages-table .action-links .edit-link:hover {
    background-color: #0056b3;
  }

  .pages-table .action-links .delete-btn {
    background-color: #dc3545;
    color: white;
  }

  .pages-table .action-links .delete-btn:hover {
    background-color: #bd2130;
  }

  .message {
      background-color: #d4edda;
      color: #155724;
      border: 1px solid #c3e6cb;
      padding: 10px 20px;
      margin-bottom: 20px;
      border-radius: 5px;
      text-align: center;
  }

  .error {
      background-color: #f8d7da;
      color: #721c24;
      border: 1px solid #f5c6cb;
      padding: 10px 20px;
      margin-bottom: 20px;
      border-radius: 5px;
      text-align: center;
  }

  /* Responsive Table */
  @media (max-width: 768px) {
    .admin-pages-dashboard {
      margin: 20px auto;
      padding: 10px;
    }
    .pages-table, .pages-table thead, .pages-table tbody, .pages-table th, .pages-table td, .pages-table tr {
      display: block;
    }
    .pages-table thead tr {
      position: absolute;
      top: -9999px;
      left: -9999px;
    }
    .pages-table tr {
      margin: 0 0 1rem 0;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 10px;
    }
    .pages-table td {
      border: none;
      border-bottom: 1px solid #eee;
      position: relative;
      padding-left: 50%;
      text-align: right;
    }
    .pages-table td:before {
      position: absolute;
      top: 12px;
      left: 6px;
      width: 45%;
      padding-right: 10px;
      white-space: nowrap;
      content: attr(data-label);
      font-weight: bold;
      text-align: left;
    }
    .pages-table td:last-child {
      border-bottom: 0;
    }
    .pages-table .action-links {
        text-align: right;
    }
  }
</style>

<div class="admin-pages-dashboard">
  <h1>Manage CMS Pages</h1>

  <div class="add-new-btn-container">
    <a href="/admin/page/add" class="add-new-btn">Add New Page</a>
  </div>

  <% if (message) { %>
    <p class="message"><%= message %></p>
  <% } %>
  <% if (error) { %>
    <p class="error"><%= error %></p>
  <% } %>

  <table class="pages-table">
    <thead>
      <tr>
        <th>Title</th>
        <th>URL Slug</th>
        <th>Show in Menu</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (pages && pages.length > 0) { %>
        <% pages.forEach(page => { %>
          <tr>
            <td data-label="Title"><%= page.title %></td>
            <td data-label="URL Slug">/page/<%= page.slug %></td>
            <td data-label="Show in Menu"><%= page.showInMenu ? 'Yes' : 'No' %></td>
            <td data-label="Actions" class="action-links">
              <a href="/admin/page/edit/<%= page._id %>" class="edit-link">Edit</a>
              <form action="/admin/page/delete/<%= page._id %>" method="POST" style="display:inline-block;" onsubmit="return confirm('Are you sure you want to delete this page?');">
                <button type="submit" class="delete-btn">Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="4" style="text-align: center;">No pages found.</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include('_footer') %>
