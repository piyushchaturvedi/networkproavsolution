<%- include('_header', { pageTitle: pageTitle, activePage: 'orders' }) %>

<style>
  /* Admin Order History Styling */
  .admin-order-history-dashboard {
    max-width: 1200px;
    margin: 40px auto;
    padding: 20px;
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
    border-radius: 8px;
  }

  .admin-order-history-dashboard h1 {
    text-align: center;
    margin-bottom: 30px;
    color: #333;
  }

  .order-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
  }

  .order-table th, .order-table td {
    border: 1px solid #ddd;
    padding: 12px;
    text-align: left;
    vertical-align: top;
  }

  .order-table th {
    background-color: #f2f2f2;
    font-weight: bold;
  }

  .order-table tbody tr:nth-child(even) {
    background-color: #f9f9f9;
  }

  .order-table tbody tr:hover {
    background-color: #f1f1f1;
  }

  .order-items-list {
    list-style: none;
    padding: 0;
    margin: 0;
    font-size: 0.9em;
  }

  .order-items-list li {
    margin-bottom: 5px;
  }

  /* Responsive Table */
  @media (max-width: 768px) {
    .admin-order-history-dashboard {
      margin: 20px auto;
      padding: 10px;
    }
    .order-table, .order-table thead, .order-table tbody, .order-table th, .order-table td, .order-table tr {
      display: block;
    }
    .order-table thead tr {
      position: absolute;
      top: -9999px;
      left: -9999px;
    }
    .order-table tr {
      margin: 0 0 1rem 0;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 10px;
    }
    .order-table td {
      border: none;
      border-bottom: 1px solid #eee;
      position: relative;
      padding-left: 50%;
      text-align: right;
    }
    .order-table td:before {
      position: absolute;
      top: 12px;
      left: 6px;
      width: 45%;
      padding-right: 10px;
      white-space: nowrap;
      content: attr(data-label);
      font-weight: bold;
      text-align: left;
    }
    .order-table td:last-child {
      border-bottom: 0;
    }
  }
</style>

<div class="admin-order-history-dashboard">
  <h1>Order History</h1>

  <table class="order-table">
    <thead>
      <tr>
        <th>Order ID (PayPal)</th>
        <th>Customer Name</th>
        <th>Customer Email</th>
        <th>Total Amount</th>
        <th>Items</th>
        <th>Status</th>
        <th>Order Date</th>
      </tr>
    </thead>
    <tbody>
      <% if (orders && orders.length > 0) { %>
        <% orders.forEach(order => { %>
          <tr>
            <td data-label="Order ID"><%= order.paypalOrderId %></td>
            <td data-label="Customer Name"><%= order.customerName %></td>
            <td data-label="Customer Email"><%= order.customerEmail %></td>
            <td data-label="Total Amount">$<%= order.totalAmount.toFixed(2) %> <%= order.currency %></td>
            <td data-label="Items">
              <ul class="order-items-list">
                <% order.items.forEach(item => { %>
                  <li><%= item.name %> (x<%= item.quantity %>) - $<%= item.price.toFixed(2) %></li>
                <% }); %>
              </ul>
            </td>
            <td data-label="Status"><%= order.status %></td>
            <td data-label="Order Date"><%= order.createdAt.toLocaleDateString() %> <%= order.createdAt.toLocaleTimeString() %></td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="7" style="text-align: center;">No orders found.</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include('_footer') %>
